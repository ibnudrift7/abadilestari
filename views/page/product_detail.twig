{% extends layout %}
{% block title %}Natural Stone Products - {% endblock %}
{% block menu %}product{% endblock %}
{% block content %}
<div class="outers_cont_inside_page back-white">

	<h1 style="visibilty: none; display:none;">Natural Stone Products - {{ app_name }}</h1>
	<div class="insides_toppage_blocks">
		<div class="blocks_bottom_intop_page pg_products">
			<div class="insides">
				<div class="blocks_top_ill">
					<h2 class="title_page">NATURAL STONE PRODUCTS</h2>
				</div>
				
				<div class="clear"></div>
			</div>
		</div>
	</div>
	
	<section class="default_sc mh200">
		<div class="prelatife container">
			<div class="insides content-text text-center">
				<span>NS-PRO STONE PRODUCTS - {{ categoryData.title|upper }}</span>
				<h2>THE NATURAL GEMS FROM INDONESIA</h2>
				<div class="clear"></div>
			</div>
		</div>
	</section>

	<section class="default_sc back-grey" id="block_product_home">
		<div class="prelatife container">
			<div class="insides text-left">
				{# Start detail prod #}
				<div class="mw1146 tengah">
					<div class="row conts_detail_product row-eq-height">
						<div class="col-md-7">
							<div class="blocks_p white">
								<img src="{{ app.request.baseurl }}/images/product/{{ data.pict }}" alt="{{ data.name }}" class="img-responsive center-block">
								<div class="clear"></div>
							</div>
						</div>
						<div class="col-md-5">
							<div class="blocks_p grey margin-left-10">
								<div class="insides prelatife">
									<div class="tops_title">{{ data.name|upper }}</div>
									<div class="clear height-10"></div>
									<table class="table">
										<tbody>
											<tr>
												<td><b>Origin</b></td>
												<td>{{ data.origin|title }}</td>
											</tr>
											<tr>
												<td><b>Available Sizes</b></td>
												<td>2-3mm, 3-5mm, 5-7mm, 7-9mm, 9-12mm</td>
											</tr>
											<tr>
												<td><b>Packing</b></td>
												<td>PP / PE Bag @20kg / pallet, loose jumbo bags</td>
											</tr>
											<tr>
												<td><b>Quality</b></td>
												<td>Standard quality / PP / PE Bag / Standard Pallet</td>
											</tr>
											<tr>
												<td><b>Document</b></td>
												<td>Invoice, Packing List, BL</td>
											</tr>
										</tbody>
									</table>
									<div class="clear height-20"></div>
									<div class="">
										<a href="javascript:;" class="btn btn-default btns_defgreens_tln" role="button" data-toggle="modal" data-target="#myModal">INQUIRE THIS PRODUCT</a>
										<div class="clear"></div>
									</div> <div class="clear"></div>

									<div class="blck_bottoms">
										<div class="row">
											<div class="col-xs-5 col-sm-6 col-md-6">
												<div class="clear height-5"></div>
												<a href="{{ path('products', {id: categoryId}) }}" class="bck_tproducts">BACK TO PRODUCT</a>
											</div>
											<div class="col-xs-7 col-sm-6 col-md-6 text-right d_inlinMiddle">
												{% if link_prev %}
												<a href="{{ path('product_detail', {'id': link_prev}) }}">
												{% else %}
												<a href="javascript:;">
												{% endif %}
												<img src="{{ app.request.baseurl }}/asset/images/icn-small-prev.png" alt="">&nbsp; PREV</a>
												&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
												{% if link_next %}
												<a href="{{ path('product_detail', {'id': link_next}) }}">
												{% else %}
												<a href="javascript:;">
												{% endif %}
												NEXT &nbsp;<img src="{{ app.request.baseurl }}/asset/images/icn-small-next.png" alt=""></a>
											</div>
										</div>
									</div>
									<div class="celar"></div>
								</div>
							</div>
						</div>
					</div>
					<div class="bl_text_bottom_fcnt text-center padding-top-15">
						<div class="clear height-3"></div>
						<div class="row">
							<div class="col-md-7 text">
								IMAGE: &nbsp;
								<a class="active" href="#">DRY</a>
								&nbsp;&nbsp;|&nbsp;&nbsp;
								<a href="#">WET</a>
								<div class="clear"></div>
							</div>
						</div>
					</div>
					<div class="clear"></div>

					<div class="clear"></div>
				</div>
				{# End detail prod #}
				<div class="clear height-25"></div>

				<div class="clear"></div>
			</div>
		</div>
	</section>
	{# end product home #}
</div>

<!-- Modal -->
<div class="modal fade customs_modalPopup" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      {# <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div> #}
      <div class="modal-body">
        <div class="ins_modal">
        	<div class="row">
        		<div class="col-md-6 col-sm-6">
        			<div class="picts">
        				<img src="{{ app.request.baseurl }}/image.php/{{ data.pict }}?width=301&amp;height=214&amp;cropratio=301:214&amp;image=/images/product/{{ data.pict }}" alt="" class="img-responsive">
        			</div>
        			<div class="clear"></div>
        		</div>
        		<div class="col-md-6 col-sm-6">
        			<div class="tops_title">{{ data.name|upper }}</div>
        			<span>INQUIRE THIS PRODUCT</span>
        			<div class="clear"></div>
        			<form class="form-horizontal" action="#" method="" onsubmit="javascript:alert('Sorry, is underconstruction'); return false;">
					  <div class="form-group">
					    <label for="inputEmail3" class="col-sm-3 control-label">Name</label>
					    <div class="col-sm-9">
					      <input type="text" class="form-control" id="inputEmail3" >
					    </div>
					  </div>
					  <div class="form-group">
					    <label for="inputEmail4" class="col-sm-3 control-label">Phone</label>
					    <div class="col-sm-9">
					      <input type="text" class="form-control" id="inputEmail4" >
					    </div>
					  </div>
					  <div class="form-group">
					    <label for="inputEmail5" class="col-sm-3 control-label">Email</label>
					    <div class="col-sm-9">
					      <input type="text" class="form-control" id="inputEmail5" >
					    </div>
					  </div>
					  <div class="form-group">
					    <label for="inputEmail6" class="col-sm-3 control-label">Message</label>
					    <div class="col-sm-9">
					      <textarea name="" id="" rows="5" class="form-control"></textarea>
					    </div>
					  </div>

					  <div class="form-group">
					    <div class="col-sm-offset-3 col-sm-9">
					      <button type="submit" class="btn btn-default">INQUIRE THIS PRODUCT</button>
					    </div>
					  </div>
					</form>
        			<div class="clear"></div>
        		</div>
        	</div>
        	<div class="clear"></div>
        </div>
      </div>

    </div>
  </div>
</div>
{% endblock %}
